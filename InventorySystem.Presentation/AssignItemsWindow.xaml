<Window x:Class="InventorySystem.Presentation.AssignItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assign Items to Shipment" Height="500" Width="700"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Inventory Items Table -->
        <DataGrid x:Name="ItemGrid" AutoGenerateColumns="False" CanUserAddRows="False" IsReadOnly="False"
                  Grid.Row="0" Margin="0,0,0,10" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Name" Binding="{Binding InventoryItem.Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Category" Binding="{Binding InventoryItem.Category}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Available" Binding="{Binding InventoryItem.Quantity}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="Assign Quantity" Binding="{Binding Quantity}" Width="Auto"/>
                <DataGridTextColumn Header="Weight/Unit (kg)" Binding="{Binding InventoryItem.WeightPerUnit}" IsReadOnly="True" Width="Auto"/>
                <DataGridTextColumn Header="Total Weight (kg)" Binding="{Binding TotalWeightKg}" IsReadOnly="True" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Summary Section -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,5">
            <TextBlock Text="Total Assigned Items: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="ItemCountLabel" Margin="5,0" VerticalAlignment="Center"/>
            <TextBlock Text=" | Total Weight: " FontWeight="Bold" VerticalAlignment="Center"/>
            <TextBlock x:Name="TotalWeightLabel" Margin="5,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Confirm Button -->
        <Button Grid.Row="2" Content="Confirm" Width="100" Height="30" HorizontalAlignment="Right"
                Click="Confirm_Click"/>
    </Grid>
</Window>
