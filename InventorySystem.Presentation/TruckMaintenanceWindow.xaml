<Window x:Class="InventorySystem.Presentation.TruckMaintenanceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Truck Maintenance" Height="500" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Fleet Maintenance Management"
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>

        <!-- Truck Grid -->
        <DataGrid x:Name="TruckGrid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="Auto"/>
                <DataGridTextColumn Header="Identifier" Binding="{Binding Identifier}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Under Maintenance" Binding="{Binding IsUnderMaintenance}" Width="*"/>
                <DataGridTextColumn Header="Max Capacity (kg)" Binding="{Binding MaxCapacityKg}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Margin" Value="5,0"/>
                </Style>
            </StackPanel.Resources>

            <Button Content="Add Truck" Click="AddTruck_Click"/>
            <Button Content="Add Maintenance" Click="AddMaintenance_Click"/>
            <Button Content="Complete Maintenance" Click="CompleteMaintenance_Click"/>
            <Button Content="Show Maintenance History" Click="ShowHistory_Click"/>
            <Button Content="Show All" Click="ShowAll_Click"/>
            <Button Content="Show Under Maintenance" Click="ShowUnderMaintenance_Click"/>
            <Button Content="Refresh" Click="Refresh_Click"/>
        </StackPanel>
    </Grid>
</Window>

