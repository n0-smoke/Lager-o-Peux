<Window x:Class="InventorySystem.Presentation.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New User" Height="300" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Username -->
        <Label Content="Username:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="UsernameBox" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

        <!-- Password -->
        <Label Content="Password:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <PasswordBox x:Name="PasswordBox" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

        <!-- Role -->
        <Label Content="Role:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <ComboBox x:Name="RoleBox" Grid.Row="2" Grid.Column="1" Margin="10,5">
            <ComboBoxItem Content="Admin"/>
            <ComboBoxItem Content="Manager" IsSelected="True"/>
            <ComboBoxItem Content="Employee"/>
        </ComboBox>

        <!-- Register Button -->
        <Button Content="Register"
                Grid.Row="3" Grid.Column="1"
                HorizontalAlignment="Right"
                Width="100" Margin="10,15,0,0"
                Click="Register_Click"/>
    </Grid>
</Window>

