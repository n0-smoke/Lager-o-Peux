<Window x:Class="InventorySystem.Presentation.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register New User" Height="400" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <Storyboard x:Key="RotateTest" RepeatBehavior="Forever">
            <DoubleAnimation
            Storyboard.TargetName="RotateTransform2"
            Storyboard.TargetProperty="Angle"
            From="177" To="537"
            Duration="0:2:00"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource RotateTest}"/>
        </EventTrigger>
    </Window.Triggers>


    <Grid Margin="20,20,20,4">

        <Path Stroke="LightBlue" StrokeThickness="5" Fill="LightBlue" Opacity="0.3"
      Data="M 10,10 L 150,10 L 10,150 Z"
      HorizontalAlignment="Left" VerticalAlignment="Top" Height="200" Stretch="Fill" Width="150" Margin="20"
      RenderTransformOrigin="0.5,0.5">
            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform x:Name="RotateTransform1" Angle="0"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Path.RenderTransform>

            <Path.Triggers>
                <EventTrigger RoutedEvent="Path.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                        Storyboard.TargetName="RotateTransform1"
                        Storyboard.TargetProperty="Angle"
                        From="0" To="360" Duration="0:2:0" />
                            <!-- 60 sekundi -->
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Path.Triggers>
        </Path>

        <Path Stroke="LightBlue" StrokeThickness="5" Fill="LightBlue" Opacity="0.3"
      Data="M 10,10 L 1500,10 L 10,150 Z"
      HorizontalAlignment="Right" VerticalAlignment="Bottom"
      Height="220" Stretch="Fill" Width="160" Margin="0,0,20,20"
      RenderTransformOrigin="0.5,0.5">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform x:Name="RotateTransform2" Angle="177"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Path.RenderTransform>

            <Path.Triggers>
                <EventTrigger RoutedEvent="Path.Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation
                        Storyboard.TargetName="RotateTransform2"
                        Storyboard.TargetProperty="Angle"
                        From="177" To="537"
                        Duration="0:2:0" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Path.Triggers>
        </Path>


        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" >

            <TextBlock Text="Register New User" FontSize="24" FontWeight="Normal"
           FontFamily="Consolas"
           HorizontalAlignment="Center" Margin="0,0,0,20" />

            <!-- Username -->
            <TextBlock Text="Username:" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBox x:Name="UsernameBox" Height="30" FontFamily="Consolas" FontSize="14"
                     Margin="0,0,0,15" Padding="5" />

            <!-- Password -->
            <TextBlock Text="Password:" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" Height="30" FontFamily="Consolas" FontSize="14"
                         Margin="0,0,0,15" Padding="5" />

            <!-- Role -->
            <TextBlock Text="Role:" FontFamily="Consolas" FontWeight="Bold" Margin="0,0,0,5"/>
            <ComboBox x:Name="RoleBox" Height="30" FontFamily="Consolas" FontSize="14" Margin="0,0,0,20" SelectionChanged="RoleBox_SelectionChanged">
                <ComboBoxItem Content="Admin"/>
                <ComboBoxItem Content="Manager" IsSelected="True"/>
                <ComboBoxItem Content="Employee"/>
            </ComboBox>
            <!-- Register Button -->
            <Button Content="Register" Width="120" Height="35" Background="LightBlue" Foreground="Black"
        FontFamily="Consolas" FontWeight="Bold"
        Click="Register_Click">
                <Button.Style>
                    <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                        <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
                        <Setter Property="RenderTransform">
                            <Setter.Value>
                                <ScaleTransform ScaleX="1" ScaleY="1" />
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="DeepSkyBlue" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1.1" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1.1" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)"
                                                To="LightBlue" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX"
                                                 To="1" Duration="0:0:0.3" />
                                            <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY"
                                                 To="1" Duration="0:0:0.3" />
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>



        </StackPanel>

    </Grid>
</Window>
