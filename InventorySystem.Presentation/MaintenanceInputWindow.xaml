<Window x:Class="InventorySystem.Presentation.MaintenanceInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Maintenance" Height="180" Width="350">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Description:" />
            <TextBox x:Name="DescriptionTextBox" />
            <Button Content="Add" Width="80" Click="AddButton_Click" RenderTransformOrigin="2.231,2.165"/>
        </StackPanel>
    </Grid>
</Window>
