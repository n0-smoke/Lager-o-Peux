<Window x:Class="InventorySystem.Presentation.ShipmentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Shipment Management" Height="400" Width="650"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Shipment Records" FontSize="18" FontWeight="Bold" />

        <!-- Shipment Table -->
        <DataGrid x:Name="ShipmentGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Truck ID" Binding="{Binding TruckId}" Width="*"/>
                <DataGridTextColumn Header="Destination" Binding="{Binding Destination}" Width="*"/>
                <DataGridTextColumn Header="Capacity" Binding="{Binding LoadCapacity}" Width="Auto"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="Auto"/>
                <DataGridTextColumn Header="Direction" Binding="{Binding Direction}" Width="Auto"/>
                <DataGridTextColumn Header="Created At" Binding="{Binding CreatedAt}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Click="Add_Click" Margin="0,0,10,0"/>
            <Button Content="Edit" Click="Edit_Click" Margin="0,0,10,0"/>
            <Button Content="Delete" Click="Delete_Click"/>
        </StackPanel>
    </Grid>
</Window>
