<Window x:Class="InventorySystem.Presentation.TruckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Truck Management" Height="400" Width="500"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Trucks" FontSize="18" FontWeight="Bold" />

        <DataGrid x:Name="TruckGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Identifier" Binding="{Binding Identifier}" Width="*"/>
                <DataGridTextColumn Header="Max Capacity (kg)" Binding="{Binding MaxCapacityKg}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Add" Click="Add_Click" Margin="0,0,10,0"/>
            <Button Content="Edit" Click="Edit_Click"/>
            <Button Content="Delete" Click="Delete_Click" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
