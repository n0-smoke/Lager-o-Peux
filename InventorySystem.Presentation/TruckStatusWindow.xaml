<Window x:Class="InventorySystem.Presentation.TruckStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Update Truck Status" Height="150" Width="300">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Select new status:" />
            <ComboBox x:Name="StatusComboBox" />
            <Button Content="Update" Width="80" Click="UpdateButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
