<Window x:Class="InventorySystem.Presentation.AddInventoryItemWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="Add Inventory Item" Height="360" Width="420"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Name -->
        <Label Content="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="10,5"/>

        <!-- Category -->
        <Label Content="Category:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CategoryBox" Grid.Row="1" Grid.Column="1" Margin="10,5"/>

        <!-- Quantity -->
        <Label Content="Quantity:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="QuantityBox" Grid.Row="2" Grid.Column="1" Margin="10,5"/>

        <!-- Supplier -->
        <Label Content="Supplier:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="SupplierBox" Grid.Row="3" Grid.Column="1" Margin="10,5"/>

        <!-- Weight Per Unit -->
        <Label Content="Weight per Unit (kg):" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="WeightBox" Grid.Row="4" Grid.Column="1" Margin="10,5"/>

        <!-- Save Button -->
        <Button Content="Save"
                Grid.Row="5"
                Grid.Column="1"
                HorizontalAlignment="Right"
                Width="80"
                Margin="10,15,0,0"
                Click="Add_Click"/>
    </Grid>
</Window>
