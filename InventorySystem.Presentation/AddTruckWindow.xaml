<Window x:Class="InventorySystem.Presentation.AddTruckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Truck" Height="450" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Name:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="NameBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <Label Content="Route ID:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="RouteIdBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <Label Content="Driver ID:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="DriverIdBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <Label Content="Load Capacity:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="CapacityBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <Label Content="Location:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="LocationBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <Label Content="Fuel Consumption:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="FuelBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <Label Content="Mileage:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <TextBox x:Name="MileageBox" Grid.Row="6" Grid.Column="1" Margin="5"/>

        <Label Content="Available:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="0,5"/>
        <CheckBox x:Name="AvailabilityBox" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <Button Content="Add Truck" Grid.Row="8" Grid.ColumnSpan="2" Margin="0,15,0,0" Height="30" Click="Add_Click"/>
    </Grid>
</Window>