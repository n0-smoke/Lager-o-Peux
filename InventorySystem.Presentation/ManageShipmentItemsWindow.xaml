<Window x:Class="InventorySystem.Presentation.ManageShipmentItemsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Manage Shipment Items" Height="650" Width="800"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Manage Shipment Items" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>
        
        <!-- Available Inventory Items -->
        <TextBlock Grid.Row="1" Text="Available Inventory Items:" FontWeight="Bold" Margin="0,0,0,5"/>
        <DataGrid x:Name="InventoryItemsGrid" Grid.Row="2" Margin="0,0,0,10" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" IsReadOnly="True"/>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Category" Binding="{Binding Category}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Available Qty" Binding="{Binding Quantity}" Width="100" IsReadOnly="True"/>
                <DataGridTextColumn Header="Weight (kg)" Binding="{Binding WeightPerUnit}" Width="100" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Add Item Controls -->
        <Grid Grid.Row="3" Margin="0,5,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Text="Quantity:" VerticalAlignment="Center"/>
            <TextBox x:Name="QuantityTextBox" Grid.Column="1" Margin="10,0" Text="1"/>
            <Button x:Name="AddItemButton" Grid.Column="2" Content="Add Selected Item to Shipment" 
                    Click="AddItemButton_Click" HorizontalAlignment="Right" Width="200"/>
        </Grid>
        
        <!-- Current Shipment Items -->
        <TextBlock Grid.Row="4" Text="Current Shipment Items:" FontWeight="Bold" Margin="0,0,0,5"/>
        <DataGrid x:Name="ShipmentItemsGrid" Grid.Row="5" Margin="0,0,0,10" AutoGenerateColumns="False" 
                  CanUserAddRows="False" SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Item Name" Binding="{Binding InventoryItem.Name}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="Weight Per Unit (kg)" Binding="{Binding InventoryItem.WeightPerUnit}" Width="120" IsReadOnly="True"/>
                <DataGridTextColumn Header="Total Weight (kg)" Binding="{Binding TotalWeightKg}" Width="100" IsReadOnly="True"/>
                <DataGridTemplateColumn Width="80">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Remove" Click="RemoveItem_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- Truck Capacity Section -->
        <Grid Grid.Row="6" Margin="0,15,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock Grid.Row="0" Text="Truck Load:" FontWeight="Bold" Margin="0,0,0,5"/>
            
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Current Load:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="10,0,0,0">
                    <TextBlock x:Name="LoadPercentageText" Text="0%" FontWeight="Bold" VerticalAlignment="Center"/>
                    <TextBlock Text=" of maximum capacity" VerticalAlignment="Center"/>
                </StackPanel>
            </Grid>
            
            <ProgressBar x:Name="LoadProgressBar" Grid.Row="2" Height="20" Margin="5,10,5,5" Maximum="100" Value="0"/>
            
            <Grid Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock x:Name="CapacityWarningText" Grid.Column="0" Foreground="Red" 
                           Visibility="Collapsed" TextWrapping="Wrap" VerticalAlignment="Center"
                           Text="Warning: Shipment exceeds truck capacity. Please reduce the load or select a larger truck."
                           Margin="5,5,5,0"/>
                           
                <Button Grid.Column="1" Content="Save Changes" Width="120" Height="30" 
                        Click="SaveChanges_Click" Margin="10,5,5,5"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
